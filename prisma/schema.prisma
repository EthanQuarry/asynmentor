generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Schema for users
model User {
  id           String    @id @unique

  username     String?   @unique
  email        String?   @unique
  profile_img   String? 
  
  auth_session Session[]
  github_id Int? @unique
}

model Session {
  id        String   @id @unique
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@index([userId])
}
